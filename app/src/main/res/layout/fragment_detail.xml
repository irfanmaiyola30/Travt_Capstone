<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFEEEEEE"
        android:paddingBottom="34dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="53dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="437dp"
                        >
                        <ImageView
                            android:id="@+id/photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo_travt"
                            android:scaleType="fitXY"
                            android:orientation="horizontal"
                            />
                        <LinearLayout
                            android:paddingTop="52dp"
                            android:paddingBottom="349dp"
                            android:paddingHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="1dp"
                                android:layout_marginEnd="12dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/ic_kembali"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="0dp"
                                    android:src="@drawable/ic_kembali"
                                    android:scaleType="fitXY"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipChildren="false"
                            android:clipToPadding="false">

                            <!-- Your existing layout content -->

                            <!-- Favorite button -->
                            <ImageView
                                android:id="@+id/favorite"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="53dp"
                                android:layout_marginEnd="20dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/favorite_putih" />

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="-46dp"
                    android:layout_marginStart="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_card"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nama_tempat"
                        android:textColor="#121212"
                        android:textSize="18sp"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="11dp"
                        android:layout_marginStart="28dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Prambanan Temple"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:layout_marginHorizontal="18dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginEnd="11dp"
                            android:src="@drawable/ci_location"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/city"
                            android:textColor="#6F7789"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="DIY, Central Java"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">
                        </LinearLayout>
                        <RelativeLayout
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="7dp"
                            >
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_jam"
                                android:scaleType="fitXY"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="vertical"
                                android:paddingHorizontal="7dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="6dp"
                                    android:layout_marginTop="3dp"
                                    android:scaleType="fitXY" />
                            </LinearLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/jam_oprasional"
                            android:textColor="#535353"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="09.00 - 17.00"
                            />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="19dp"
                        android:layout_marginHorizontal="26dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/baseline_star_24"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/ratting"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_marginEnd="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="4"
                            />
                        <TextView
                            android:id="@+id/text"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_marginEnd="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="/ 5"
                            />
                        <TextView
                            android:id="@+id/totalReview"
                            android:textColor="#AEAEAE"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text=" "
                            />
                        <TextView
                            android:textColor="#AEAEAE"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text=" Rating"
                            />
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">
                        </LinearLayout>
                        <TextView
                            android:id="@+id/lihat_review"
                            android:textColor="#2567E8"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="See reviews"
                            />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/rounded_card"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView

                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="26dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Description"
                />
            <TextView
                android:id="@+id/description"
                android:textSize="12sp"
                android:layout_marginBottom="9dp"
            android:layout_marginHorizontal="22dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Prambanan Temple is the largest Hindu temple in Indonesia. Until now it is not certain when this temple was built and on whose orders, but it is strongly suspected that Prambanan Temple was built around the middle of the 9th century by the king of the Sanjaya Dynasty, King Balitung Maha Sam Read More... "
            />
            <!-- Menambahkan RatingBar di bawah deskripsi -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:numStars="5"
                android:outlineSpotShadowColor="@color/yellow"
                android:rating="0"
                android:stepSize="1"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/nama_ratting"
                android:textColor="#121212"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Berikan Ratingmu"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1A000000"
                android:layout_marginBottom="80dp"
                android:layout_marginHorizontal="18dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/map_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_buton"
                    android:text="Location"
                    android:textSize="12sp"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                </Button>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
